#! /usr/bin/env coffee

notice = require '../../lib/notice'

notice.connect "client @ #{process.pid}", {

    context: 
        some: 'details'

    connect: 
        # address: 'localhost'
        allowUncertified: true # tolerate self sighned cert on serverside
        transport:       'https'
        port:             10101
        secret:           process.env.SECRET
        errorWait:        1000

}, (error, client) -> 
    
    console.log ERROR:  error
    console.log CLIENT: client


